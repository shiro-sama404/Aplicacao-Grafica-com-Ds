include "colors.inc"

material "SmallSphere"
{
  ambient  Red * 0.3
  diffuse  Red
  spot     Red * 0.5
  shine    80
  specular Black
  transparency Black
  ior 1.0
}

material "SmallSphere2"
{
  ambient  Blue * 0.3
  diffuse  Blue
  spot     Blue * 0.5
  shine    80
  specular Black
  transparency Black
  ior 1.0
}

material "SmallSphere3"
{
  ambient  Green * 0.3
  diffuse  Green
  spot     Green * 0.5
  shine    80
  specular Black
  transparency Black
  ior 1.0
}

material "Floor"
{
  ambient  Gray * 0.3
  diffuse  Gray
  spot     Gray * 0.3
  shine    50
  specular Black
  transparency Black
  ior 1.0
}

scene
{
  environment
  {
    background DarkGray
    ambient VeryLightGray * 0.3
  }

  object "Main Camera"
  {
    define pos <0, 5, 15>
    define target <0, 0, 0>
    define vpn target - pos
    
    transform
    {
      position pos
      rotation axes(vpn, <0,1,0>)
    }
    camera
    {
      perspective
      angle 50
    }
  }

  object "Lights"
  {
    object
    {
      transform
      {
        position <10, 10, 10>
      }
      light
      {
        point
        color White
        falloff 0
      }
    }

    object
    {
      transform
      {
        position <-10, 10, 10>
      }
      light
      {
        point
        color White
        falloff 0
      }
    }
  }

  object "Floor"
  {
    transform
    {
      position <0, -2, 0>
      scale <20, 0.1, 20>
    }
    mesh "Plane" material "Floor"
  }

  define gridSize 8
  define spacing 1.5
  define startPos -5.25

  object "Grid of Small Spheres"
  {
    define i 0
    define j 0
    define x startPos
    define y -1.5
    define z startPos

    object
    {
      transform
      {
        position <x, y, z>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere"
    }

    object
    {
      transform
      {
        position <x + spacing, y, z>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere2"
    }

    object
    {
      transform
      {
        position <x + spacing * 2, y, z>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere3"
    }

    object
    {
      transform
      {
        position <x + spacing * 3, y, z>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere"
    }

    object
    {
      transform
      {
        position <x + spacing * 4, y, z>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere2"
    }

    object
    {
      transform
      {
        position <x + spacing * 5, y, z>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere3"
    }

    object
    {
      transform
      {
        position <x + spacing * 6, y, z>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere"
    }

    object
    {
      transform
      {
        position <x + spacing * 7, y, z>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere2"
    }

    object
    {
      transform
      {
        position <x, y, z + spacing>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere2"
    }

    object
    {
      transform
      {
        position <x + spacing, y, z + spacing>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere3"
    }

    object
    {
      transform
      {
        position <x + spacing * 2, y, z + spacing>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere"
    }

    object
    {
      transform
      {
        position <x + spacing * 3, y, z + spacing>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere2"
    }

    object
    {
      transform
      {
        position <x + spacing * 4, y, z + spacing>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere3"
    }

    object
    {
      transform
      {
        position <x + spacing * 5, y, z + spacing>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere"
    }

    object
    {
      transform
      {
        position <x + spacing * 6, y, z + spacing>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere2"
    }

    object
    {
      transform
      {
        position <x + spacing * 7, y, z + spacing>
        scale vec3(0.3)
      }
      mesh "Sphere" material "SmallSphere3"
    }
  }
}

